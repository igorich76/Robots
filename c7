##
uses robot;
Task('c7');// способ №1 два цикла

while WallFromRight do
    begin
      Paint;Down;Paint;Left;Paint;Up;Paint;
      Left;Paint;Down;Paint;Left;Paint;Up;Paint;Left;Paint;
      Paint;Down;Paint;Left;Paint;Up;Paint;
      Left;Paint;Down;Paint;Left;Paint;Up;Paint;Left;Paint;
    end;
    
while WallFromLeft do
    begin
      Down;Paint;Left;Paint;Up;Paint;
    end;
  
Left;

/////////////////////////////////////////////

##
uses robot;
Task('c7'); // способ №2 пять циклов

while WallFromLeft do
  begin
    Paint;Down;Paint;Left;Paint;Up;Paint;
  end;
Left;
while WallFromLeft do
  begin
    Paint;Down;Paint;Left;Paint;Up;Paint;
  end;
Left;
while WallFromLeft do
  begin
    Paint;Down;Paint;Left;Paint;Up;Paint;
  end;
Left;
while WallFromLeft do
  begin
    Paint;Down;Paint;Left;Paint;Up;Paint;
  end;
Left;
while WallFromLeft do
  begin
    Paint;Down;Paint;Left;Paint;Up;Paint;
  end;
Left;

//////////////////////////////

##
uses robot;
Task('c7'); //
repeat
  Paint;Down;Paint;Left;Paint;Up;Paint;
      Left;Paint;Down;Paint;Left;Paint;
      Up;Paint;Left;Paint;Paint;Down;
      Paint;Left;Paint;Up;Paint;Left;Paint;
      Down;Paint;Left;Paint;Up;Paint;Left;
      Paint;
until FreeFromRight;
repeat
    Down;Paint;Left;Paint;Up;Paint;
until FreeFromLeft;
Left;
